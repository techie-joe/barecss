extends ../../main/_html

block append vars
  - pageid = 'core/link'
  - title = `Link | ${name}`
  - description = 'Styling hyperlinks.'

block append style
  style.
  //- style.

block header
  header._container
    +logo
    span#maindesc= description
  +main_nav

block article
  +core_nav
  hr
  article(style="padding-bottom:1.8rem")
    nav._container
      a(href='#')._a2#hyperlink4 Hyperlink
      a(href='#')._a2._link Link
      a(href='#')._a2._visited Visited
      a(href='#')._a2._hover Hover
      a(href='#')._a2._active Active
      script.
        document.getElementById('hyperlink4').href+='?t='+(new Date().getTime());
    hr._mb0
    nav._color_2
      a(href='#')._a1#hyperlink3 Hyperlink
      a(href='#')._a1._link Link
      a(href='#')._a1._visited Visited
      a(href='#')._a1._hover Hover
      a(href='#')._a1._active Active
      script.
        document.getElementById('hyperlink3').href+='?t='+(new Date().getTime());
    hr._mt0
    section._container
      |#[a(href='#')#hyperlink Hyperlink] 
      |#[a(href='#')._link Link] 
      |#[a(href='#')._visited Visited] 
      |#[a(href='#')._hover Hover] 
      |#[a(href='#')._active Active] 
      br
      |#[a(href='#')._neutral Neutral] 
      |#[a(href='#')._no_color No-Color] 
      |Normal
      br
      |#[a(href='#')._link._no_u No-Underline] 
      |#[a(href='#')._link._u_dotted Dotted] 
      |#[a(href='#')._link._u_dashed Dashed] 
      |#[a(href='#')._link._u_double Double] 
      |#[a(href='#')._link._u_wavy Wavy] 
      script.
        document.getElementById('hyperlink').href+='?t='+(new Date().getTime());
    hr
