mixin menu_style_1(links)
  each v in links
    - classes = ['_no_u'];
    - if(pageid === v[0]) classes = ['_no_color']
    a(href=homeUri+v[1] class=classes.join(' ')) #{v[2]}
    +_

mixin menu_style_a1(links)
  ._color_2: nav._container
    each v in links
      - classes = ['_a1'];
      - if(pageid === v[0]) classes = ['_a1 _active']
      a(href=homeUri+v[1] class=classes.join(' ')) #{v[2]}

mixin menu_style_a2(links)
  nav._container(style="padding:0 .25rem")
    each v in links
      - classes = ['_a2'];
      - if(pageid === v[0]) classes = ['_a2 _active']
      a(href=homeUri+v[1] class=classes.join(' ')) #{v[2]}

mixin main_nav
  //- pageid, uri, title
  +menu_style_a1([
    ['basics','basics','Basics'],
    ['core','core','Core'],
    ['lab','lab','Lab'],
  ])

mixin core_nav
  //- pageid, uri, title
  +menu_style_a2([
    ['core/link','core/link.html','Link'],
    ['core/details','core/details.html','Details'],
  ])

mixin basic_nav
  //- pageid, uri, title
  +menu_style_a2([
  ])

mixin lab_nav
  //- pageid, uri, title
  +menu_style_a2([
      ['lab/test','lab/test.html','Test'],
      ['lab/temp','lab/temp.html','Temp'],
  ])
